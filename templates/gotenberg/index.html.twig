{% extends 'base.html.twig' %}

{% block title %}MyPDF - Convert{% endblock %}

{% block body %}
    <div class="flex min-h-screen justify-center items-center">
        <div class="container mx-auto max-w-md p-6 bg-gray-700 rounded-lg shadow-md">
            <h1 class="text-white text-3xl font-bold mb-8">URL to PDF</h1>
            <form action="{{ path('app_gotenberg_convert') }}" method="post" class="mb-4">
                <label for="url" class="block mb-2 text-gray-400">Enter your URL :</label>
                <input type="text" id="url" name="url" required class="w-full border border-gray-300 px-4 py-2 rounded-md mb-4 focus:outline-none focus:ring focus:ring-blue-400">
                <label for="title" class="block mb-2 text-gray-400">File name :</label>
                <input type="text" id="title" name="title" required class="w-full border border-gray-300 px-4 py-2 rounded-md mb-4 focus:outline-none focus:ring focus:ring-blue-400">
                <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-400">Convert</button>
            </form>
        </div>
    </div>
{% endblock %}